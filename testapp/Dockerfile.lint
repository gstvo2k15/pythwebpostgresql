# Dockerfile.lint
FROM python:3.9

# Directorio de trabajo
WORKDIR /app

# Copia el cÃ³digo del proyecto al contenedor
COPY ./app /app

# Instala pylint y flake8
RUN pip install pylint flake8

# Comando por defecto para ejecutar pylint
CMD ["sh", "-c", "pylint app > lint-reports/pylint-report.txt || true"]

